bash start-docker.sh build % Crea imagen
bash start-docker.sh start % Crea contenedor
bash start-docker.sh open % Abre contenedor

Desde "root/ros2_ws":

colcon build --symlink-install
source install/setup.bash

Modificar archivos:

En /root/ros2_ws/src/sim_ros2_interface/meta/interfaces.txt agregar: 
robmovil_msgs/msg/EncoderTicks
rosgraph_msgs/msg/Clock
sensor_msgs/msg/Imus

En /root/ros2_ws/src/sim_ros2_interface/package.xml agregar: 
<depend>robmovil_msgs</depend>
<depend>sensor_msgs</depend>

En /root/ros2_ws/src/sim_ros2_interface/CMakeLists.txt agregar: 
find_package(robmovil_msgs REQUIRED)
find_package(sensor_msgs REQUIRED)


Y dentro del ament_target_dependencies:
robmovil_msgs
sensor_msgs

Desde "root/ros2_ws":

colcon build --packages-select sim_ros2_interface
colcon build --packages-select lazo_abierto
colcon build --packages-select lazo_cerrado
colcon build --packages-select imu_laser
